    <link rel="stylesheet" href="~/CI_platform.styles.css" asp-append-version="true" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="~/css//login.css" asp-append-version="true" />
    <title>@ViewData["title"]</title>
    <script>
                  toastr.options = {
            "closeButton": true,
            "debug": false,"newestOnTop": false,"progressBar": true,"positionClass": "toast-top-right","preventDuplicates": false,"onclick": null,"showDuration": "300","hideDuration": "1000","timeOut": "2000",
            "extendedTimeOut": "1000","showEasing": "swing","hideEasing": "swing","showMethod": "slideDown","hideMethod": "slideUp"
        }
    </script>
</head>
<body>
    @{
        if (@ViewData["register"] == "warning")
        {

            <script>
                toastr.error("User Already Available")
            </script>
        }

        else if (@ViewData["login"] == "register")
        {
            <script>
                toastr.error("You need to sign up first....")
            </script>
        }
        else if (@ViewData["login"] == "password")
        {

            <script>
                toastr.error("Password is incorrect!")
            </script>
        }
        else if (@ViewData["ResetPassword"] == "false")
        {

            <script>
                toastr.error("Token is Not Valid!")
            </script>
        }
        else if (@ViewData["ResetPassword"] == "EmailSent")
        {

            <script>
                toastr.success(" Email Sent To Your EmailId")
            </script>
        }
        else if (@ViewData["ResetPassword"] == "Link")
        {

            <script>
                toastr.error("you already use this link")
            </script>
        } 
        else if (@ViewData["ResetPassword"] == "LinkExpire")
        {

            <script>
                toastr.error("Your link is expired")
            </script>
        }
        else if (@ViewData["ResetPassword"] == "token")
        {

            <script>
                toastr.error("Token is Used")
            </script>
        }


    }
    <div class="container-fluid p-0 m-0 position-relative">
        <div class="row-res row m-0 justify-content-between align-items-center">
            <div class="col-12 col-lg-8 p-0 h-100">
                <div id="loginCarousel" class="carousel slide h-100" data-bs-ride="carousel">
                    <ol class="carousel-indicators d-lg-flex d-none">
                        @if (banner != null)
                        {
                            int cnt = 0;
                            @foreach (var i in banner)
                            {
                                <li data-bs-target="#loginCarousel" data-bs-slide-to="@cnt" class="@(cnt==0?"active":"")" aria-current="true" aria-label="First slide"></li>
                                cnt = cnt + 1;
                            }
                        }
                        else
                        {
                            <li data-bs-target="#loginCarousel" data-bs-slide-to="0" class="active" aria-current="true"
                            aria-label="First slide"></li>
                            <li data-bs-target="#loginCarousel" data-bs-slide-to="1" aria-label="Second slide"></li>
                            <li data-bs-target="#loginCarousel" data-bs-slide-to="2" aria-label="Third slide"></li>
                        }
                    </ol>
                    <div class="carousel-inner h-100" role="listbox">
                        @if (banner != null)
                        {
                            int cnt = 0;
                            foreach (var i in banner)
                            {
                                <div class="carousel-item @(cnt==0?"active":"") h-100">
                                    <img src="@i.Image" class="w-100 d-block h-100" alt="First slide">
                                    <div class="carousel-caption d-block">
                                       
                                        <p class="fs-6">
                                            @i.Text
                                        </p>
                                    </div>
                                </div>
                                cnt = cnt + 1;
                            }
                        }
                        else
                        {
                            <div class="carousel-item active h-100">
                                <img src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-login.png"
                                 class="w-100 d-block h-100" alt="First slide">
                                <div class="carousel-caption d-block">

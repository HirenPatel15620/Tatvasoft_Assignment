@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accesor
@{
    ViewData["Title"] = "Admin_control";
    ViewData["css"] = "Admin.css";
}
@model List<Mission>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


        <div class="c p-3">
            <div class="my-3 ">
                <div class="fs-3 d-flex">
                    <div class="border-bottom border-dark pe-3">
                        Mission
                    </div>
                </div>
                <hr class="m-0 p-0">
            </div>
            <div class="py-3 d-flex justify-content-between align-items-center">
                <input type="text" class="form-control w-25" placeholder="search">
                <input type="button" class="btn-primary" value="+ Add">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target=".bd-example-modal-xl">Extra large modal</button>
            </div>
            <div class="w-100 h-100">
                <table class="table border ">
                    <thead class="bg-primary ">
                        <tr class="rounded-3">
                            <th>Mission Title</th>
                            <th>Mission Type</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Action</th>
                            <th></th>
                           
                            
                        </tr>
                    </thead>


                    @{
                        foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.MissionType</td>
                                    <td>@item.StartDate.ToString().Substring(0,10)</td>
                                    <td>@item.EndDate.ToString().Substring(0,10)</td>
                                    <td>
                                        <button class="remove_style"><img src="/images/edit.png"   style="margin: 3px 3px 3px 3px;"/></button> 
                                        <button class="remove_style" onclick="DeleteRecord(@item.MissionId)" ><img src="~/images/bin.png"   style="margin: 3px 3px 3px 3px;"/></button>  
                                    </td>
                                    
                                    
                                </tr>
                            </tbody>
                        }
                    }
                </table>
            </div>
        </div>
    </div>

</div>

@*Modal of add mission*@
<div class="modal fade bd-example-modal-xl" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      
    </div>
  </div>
</div>
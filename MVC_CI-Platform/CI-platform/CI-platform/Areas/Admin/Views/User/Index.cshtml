@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accesor
@{
    ViewData["Title"] = "Admin_control";
    ViewData["css"] = "Admin.css";
}
@model List<User>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


        <div class="c p-3">
            <div class="my-3 ">
                <div class="fs-3 d-flex">
                    <div class="border-bottom border-dark pe-3">
                        User
                    </div>
                </div>
                <hr class="m-0 p-0">
            </div>
            <div class="py-3 d-flex justify-content-between align-items-center">
                <input type="text" class="form-control w-25" placeholder="search">
          
            </div>
            <div class="w-100 h-100">
                <table class="table border ">
                    <thead class="bg-primary ">
                        <tr class="rounded-3">
                            <th>FirstName</th>
                            <th>LastName</th>
                            <th>Email</th>
                            <th>Employee Id</th>
                            <th>Department</th>
                            <th>Status</th>
                            <th>Action</th>



                        </tr>
                    </thead>


                    @{
                        foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>@item.Email</td>
                                    <td>@item.EmployeeId</td>
                                    <td>@item.Department</td>
                                    <td>
                                        @if (@item.Status == "1")
                                        {
                                            <p class="text-success">Active</p>
                                        }
                                        else
                                        {
                                            <p class="text-danger">Deactive</p>
                                        }
                                    </td>
                                   
                                    <td >
                                       <button onclick="update(@item.UserId,1)" class="btn btn-danger">Edit</button>
                                       @*
                                       <button onclick="update(@item.UserId,0)" class="btn btn-danger">Deactive</button>
                                        <img onclick="update(@item.UserId,1)" src="/images/right.png" style="margin: 3px 3px 3px 3px;" /> 
                                        
                                        <img onclick="update(@item.UserId,0)" src="/images/cancel.png" style="margin: 3px 3px 3px 3px;" />
                                        *@
                                    </td>

                                </tr>
                            </tbody>
                        }
                    }
                </table>
            </div>
        </div>
    </div>

</div>


@*edit*@
@{
    foreach (var item in Model)
    {

        <div class="modal fade" id="deleterec-@item.UserId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <form asp-action="GetEditUser" asp-area="Admin" asp-controller="User">
                        <input name="id" id="id" type="hidden" value="@item.UserId" />
                        @*
                            <input name="flag" id="flag" type="hidden" />
                            *@
                        <div class="modal-header border-0">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Are you sure want to change?</h1>
                        </div>
                        <div class="modal-body ">
                            <label> User Name  </label>

                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroup-sizing-default">User Name </span>
                                </div>
                                <input disabled value="@item.FirstName @item.LastName" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroup-sizing-default">Status (0 & 1)</span>
                                </div>
                                <input name="flag" id="flag" value="@item.Status" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
                            </div>


                        </div>

                        <div class="modal-footer">
                            <button class="btn btn-outline-warning rounded-pill" type="submit">Change</button>
                            <button type="reset" class="btn rounded-pill btn-outline-secondary" data-bs-dismiss="modal">Cancle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}
  






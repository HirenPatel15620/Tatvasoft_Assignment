                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target=".bd-example-modal-lg">+ Add</button>

            </div>
            <div class="w-100 h-100">
                <table class="table border ">
                    <thead class="bg-primary ">
                        <tr class="rounded-3">
                            <th>Title</th>
                            <th>Status</th>
                            <th>Action</th>
                            <th></th>
                        </tr>
                    </thead>


                    @{
                        foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>@item.Title</td>
                                    <td>
                                        @if (@item.Status == "1")
                                        {
                                            <p class="text-success">Active</p>
                                        }
                                        else
                                        {
                                            <p class="text-danger">Deactive</p>
                                        }
                                    </td>
                                    <td>
                                        <button type="button" id="editcms" onclick="editor(@item.CmsPageId)" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#edit-@item.CmsPageId">Edit</button>
                                        <button type="button" id="editcms" onclick="DeleteRecord(@item.CmsPageId)" class="btn btn-danger" >Delete</button>
                                   @*
                                        <img  onclick="DeleteRecord(@item.CmsPageId)"><img src="~/images/cancel.png" />
                                        *@
                                    </td>


                                </tr>
                            </tbody>
                        }
                    }
              
                </table>
            </div>
        </div>
    </div>

</div>



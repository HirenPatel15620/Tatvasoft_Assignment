@model CI.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Profile page";
    ViewData["css"] = "profile.css";
}
<div class="container mt-5">
    <form asp-action="Profile" asp-controller="Home">
        <div class="row">
            <div class=" mt-2 col-lg-3  profile-photo border border-1 d-flex flex-column justify-content-center position-relative align-items-center">
                <input type="file"  onchange="upload_profile_image()" class="h-50 w-50" accept="image/*" id="profile-image" style="opacity:0;position:absolute;top:10%;cursor:pointer;" />
                <img style="cursor:pointer;" class="w-50 h-50 rounded-circle" id="old-profile-image" src="~/images/volunteer3.png" alt="" />
                <h5 class="mt-4">Hiren patel</h5>
                <span data-bs-toggle="modal" data-bs-target="#changepassword" style="cursor:pointer;">Change Password</span>
            </div>


            <div class="col-lg-8 profile-details mt-5">
                <div class="w-100 border-bottom">
                    <h5>Basic Information</h5>
                </div>

                <div class="row mt-2">
                    <div class="col-lg-6 col-md-6 mt-2"><label class="form-label">Name</label><input  placeholder="Enter Your Name" type="text" class="form-control" id='first-name' /></div>
                    <div class="col-lg-6 col-md-6 mt-2"><label class="form-label">SurName</label><input placeholder="Enter Your SurName" type="text" class="form-control" id='last-name' /></div>

                    <div class="col-lg-6 col-md-6 mt-2"><label class="form-label">Employee ID</label><input placeholder="Enter Your Employee ID" type="text" class="form-control" id='e_id' /></div>
                    <div class="col-lg-6 col-md-6 mt-2"><label class="form-label">Manager</label><input placeholder="Enter Your Manager Details" type="text" class="form-control" id='m_details' /></div>

                    <div class="col-lg-6 col-md-6 mt-2"><label class="form-label">Title</label><input placeholder="Enter Your Title" type="text" class="form-control" id='title' /></div>
                    <div class="col-lg-6 col-md-6 mt-2"><label class="form-label">Department</label><input placeholder="Enter Your Department" type="text" class="form-control" id='department' /></div>

                </div>


                <div class="row mt-5">
                    <div class="col-lg-12"><label class="form-label">My Profile</label><textarea placeholder="Enter Your Bio..." rows=5 class="form-control" id='bio'></textarea></div>
                    <div class="col-lg-12 mt-4"><label class="form-label">Why I Volunteer?</label><textarea placeholder="Enter Your Volunteering Reason..." rows=5 id='reason_volunteering' class="form-control"></textarea></div>
                </div>

                <div class="w-100 border-bottom mt-5">
                    <h5>Address Location</h5>
                </div>

                <div class="row mt-2">

                    <div class="col-lg-6 mt-2">
                        <label class="form-label">City</label>
                        <select id='city' class="form-select city me-3" aria-label="Select Mission">
                            <option value=0 disabled selected>Select Your City</option>
                        </select>
                    </div>
                    <div class="col-lg-6  mt-2">
                        <label class="form-label">Country</label>
                        <select id='country' onchange="getcities()" class="form-select country me-3" aria-label="Select Mission">
                            <option value=0 disabled selected>Select Your Country</option>
                            @{
                                foreach (var item in Model.Countries)
                                {
                                    <option value=@item.CountryId>@item.Name</option>
                                }
                            }

                        </select>
                    </div>
                </div>



                <div class="w-100 border-bottom mt-5">
                    <h5>Professional Informnation</h5>
                </div>

                <div class="row mt-2">
                    <div class="col-lg-6 mt-2 col-md-6 ">
                        <label class="form-label">Availablity</label><select id='avilablity' class="form-select me-3" aria-label="Select Mission">
                            <option value=0 disabled selected>Select Your Availablity</option>
                            <option value=0>Weekend</option>
                            <option>Daily</option>
                        </select>
                    </div>

                    <div class="col-lg-6 mt-2"><label class="form-label">LinkedIn</label><input id='linked_in' placeholder="Enter Your LinkIn Username" type="text" class="form-control" /> </div>
                </div>


                <div class="w-100 border-bottom mt-5">
                    <h5>My Skill</h5>
                </div>

                @*skill display*@
                <div class="mt-4 w-100 saved-skills d-flex flex-column border border-1" style="height:150px;">       </div>


                <div data-bs-toggle="modal" data-bs-target="#addskills" style="cursor:pointer;" class=" mt-3 col-lg-2 col-md-3 col-sm-4 col d-flex justify-content-center align-items-center border border-dark rounded-pill mt-2">
                    <span class="p-1 text-muted" style="white-space:nowrap;">Add Skills</span>
                </div>



                <div class="d-flex justify-content-end">
                    <button style="border: 2px solid #F88634;border-radius: 100px;color: #F88634;padding-left: 20px; padding-right: 20px;" class="btn mt-4">Save</button>
                </div>
            </div>
        </div>
    </form>
</div>





@*modal of skills*@
<div class="modal fade" id="addskills" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Add Your Skills</h5>
            </div>
            <div class="modal-body d-flex justufy-content-center">
                <div class="all-skills d-flex flex-column text-muted border border-1">
                    @{
                        foreach (var item in Model?.Skills)
                        {
                            <span onclick="addskill('skill-@item.SkillId','@item.SkillName')" class="mt-1" style="cursor:pointer;" id="skill-@item.SkillId">@item.SkillName</span>
                        }
                    }

                </div>
                <div class="d-flex flex-column justify-content-center align-items-center buttons">
                    <img style="cursor:pointer;" onclick="addallskill()" src="~/images/right-arrow1.png" />
                    <img class="mt-3" src="~/images/left.png" />
                </div>
                <div class="selected-skills d-flex flex-column text-muted border border-1">
                </div>
            </div>
            <div class="modal-footer">
                <div data-bs-dismiss="modal" style="cursor:pointer;" class="col-lg-2 col-md-3 col-sm-2 col-3 d-flex justify-content-center align-items-center border border-dark rounded-pill mt-2">
                    <span class="p-1 text-muted" style="white-space:nowrap;">Cancle</span>
                </div>
                <button style="border: 2px solid #F88634;border-radius: 100px;color: #F88634;padding-left: 20px; padding-right: 20px;" type="button" onclick="saveskills()" class="btn applyButton" data-bs-dismiss="modal">Save</button>
            </div>
        </div>
    </div>
</div>



<script src="~/js/Profile.js"></script>
@model CI.Models.ViewModels.Login
@{
    ViewData["Title"] = "Login";
    Layout = "UserAuthentication_Layout";
}
        <div class="login col-md-4 col-sm-5">
            <div class="login-details">
                <form asp-controller="UserAuthentication" asp-action="Login">
                <label asp-for="Email" class="form-label">Email address</label>
                <input asp-for="Email" class="form-control"  aria-describedby="emailHelp" />
                <span asp-validation-for="Email" class="text-danger d-block"></span>
                <label asp-for="Password" class="form-label mt-3">Password</label>
                <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger d-block"></span>
                <button type="submit" class="btn mt-4">Login</button>
        </form>
                <div class="toregister text-center mt-3">
            <a class="l-password"  asp-controller="UserAuthentication" asp-action="ForgotPassword"> Lost Your Password?</a>
                    <p class="mt-2">
                        Don't have an account?<a  asp-controller="UserAuthentication" asp-action="Register" style="text-decoration: none">Creat an account</a>
                    </p>
                </div>
            </div>
            <div class="privacy text-center">
                <a href="#" class="privacy">Privacy Policy</a>
            </div>
        </div>


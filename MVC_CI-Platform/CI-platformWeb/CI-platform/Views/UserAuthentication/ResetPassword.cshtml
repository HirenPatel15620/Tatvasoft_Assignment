@model User
@{
    ViewData["title"] = "ResetPassword";
    Layout = "UserAuthentication_Layout"; 
}
<div class="login col-md-4 col-sm-5">
    <div class="login-details">
        <div class="toregister text-center mt-3">
            <span>New Password</span>
            <p class="mt-2" style="color: #414141; font-size:13px">
                Please enter a new password in the feilds below
            </p>
        </div>
        <form asp-controller="UserAuthentication" asp-action="ResetPassword">
        <label asp-for="Password" class="form-label">New Password</label>
        <input type="password"
               class="form-control"
               asp-for="Password" />
               <span asp-validation-for="Password" class="text-danger d-block"></span>
        <label asp-for="Password" class="form-label mt-3">Confirm New Password</label>
        <input asp-for="Password" type="password"
               class="form-control"
               />
        <span asp-validation-for="Password" class="text-danger d-block"></span>
        <button type="submit" class="btn mt-4">Change Password</button>
        </form>
        <div class="tologin mt-3">
            <a asp-controller="UserAuthentication" asp-action="Login">Login</a>
        </div>
        <div class="privacy text-center">
            <span>Privacy Policy</span>
        </div>
    </div>
</div>

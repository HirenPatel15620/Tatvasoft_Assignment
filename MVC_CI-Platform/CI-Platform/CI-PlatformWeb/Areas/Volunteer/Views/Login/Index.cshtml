
@{
    Layout = "~/Views/Shared/_Login_layout.cshtml";
}

@model User

<div class="w-100 p-5 privacy d-flex align-items-center">
    <form method="post" class="w-100">
        <input name="ReturnUrl" type="text" value="@ViewBag.ReturnUrl" hidden />
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email Address</label>
            <input  asp-for="Email" id="email-id" class="form-control"
                placeholder="abc@xyz.com" >
                   <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3 position-relative">
            <label asp-for="Password" class="form-label">Password</label>
            <input class="form-control" asp-for="Password" id="login-pass"
                   placeholder="**********" >
          
                   <span asp-validation-for="Password" class="text-danger"></span>

        </div>
        <button type="submit" class="btn-ci-primary mt-2 w-100">Login</button>
        <div class="text-center">
            <label class="mt-3"><a asp-area="Volunteer" asp-controller="Login" asp-action="ForgotPass">Lost your password?</a></label>
            <br>
            <label class="fs-6 mt-3">
                Don't have an account?<a asp-area="Volunteer" asp-controller="Login" asp-action="Registration">
                    Create
                    Account
                </a>
            </label>
        </div>
    </form>
</div>
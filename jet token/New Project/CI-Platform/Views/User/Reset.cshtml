@using CI_Platform.Entities.Models
@model User

<!DOCTYPE html>
<html lang="en">

<head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
        <link href='https://fonts.googleapis.com/css?family=Noto Sans' rel='stylesheet'>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="https://code.jquery.com/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" integrity="sha512-vKMx8UnXk60zUwyUnUPM3HbQo8QfmNx7+ltw8Pm5zLusl1XIfwcxo8DbWCqMGKaWeNxWA8yrx5v3SaVpMvR3CA==" crossorigin="anonymous" referrerpolicy="no-referrer"/>

        <title>Reset Page</title>
</head>

    <body>
    <!-------------------------------------------   image crousel  -------------------------------------------------------------->


    <div class="container-fluid ps-0">
        <div class="row d-flex">
            <div class="col-lg-8 col-md-12 col-sm-12 p-0 ">
                <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">

                    <div class="carousel-indicators">
                        @foreach (var banner in ViewBag.Crousel)
                        {
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@ViewBag.Crousel.IndexOf(banner)" class="@if (ViewBag.Crousel.IndexOf(banner) == 0) { <text>active</text> }" aria-current="@if (ViewBag.Crousel.IndexOf(banner) == 0) { <text>true</text> }" aria-label="Slide @(ViewBag.Crousel.IndexOf(banner)+1)"></button>
                        }
                    </div>

                    <div class="carousel-inner">
                        @foreach (var banner in ViewBag.Crousel)
                        {
                            <div class="carousel-item">
                                <img style="width: 100%; " id="carouselIMG" src="~/bannerImages/@banner.Image" class="carouselIMG img-fluid d-block ">
                                <div style="text-align: left;" class="carousel-caption d-none d-md-block d-sm-block ">
                                    <h3 class="f1"> @banner.Text</h3>
                                
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>


           

               <!-------------------------------------------   Reset Form  -------------------------------------------------------------->


            <div class="col-lg-4 col-md-12 col-sm-12 mt-md-5 mt-sm-5 d-flex justify-content-center align-items-center">

                <form name="login" action="#" method="post" id="reset">
                    <div>
                        <p class="h5 mb-3" style="text-align: center;">New Password</p>
                    </div>
                    <div class="text-center mx-5">
                        <p class="frgtprgrp">Please enter a new password in the fields below.</p>
                    </div>
                    <div class="mb-3 mt-2 d-grid col-11 mx-auto">
                        <label for="username">New Password</label>
                        <input type="password" class="form-control"  id="password" asp-for="Password" placeholder="Password" onkeyup="password_verification(); new_password_verification();">
                        <div id="password_error" style="color:red;"></div>
                    </div>

                    <div class="mb-3 mt-2 d-grid col-11 mx-auto">
                        <label for="username">Confirm Password</label>
                        <input type="password" class="form-control" id="cpassword" onkeyup="verifyPassword(); cpassword_verification();" placeholder="Password">
                        <div id="cpassword_error" style="color:red;"></div>
                        <span id="Message"></span>
                    </div>

                    <div class="mb-3 d-grid col-11 mx-auto">
                        <button type="submit" id="submit" class="btn btn-outline-warning btn-lg rounded-pill ">Change
                            Password</button>
                    </div>
                    <div class="mb-3 ">
                        <a href="~/User/Login" class="grey ">
                            <p class="text-center">Login</p>
                        </a>
                    </div>

                    <div class="mb-3 mt-5 pt-5" id="bottom">
                        <a href="~/User/Privacy" class="grey">
                            <p class="text-center">Privacy Policy</p>
                        </a>
                    </div>
                </form>
            </div>



        </div>
    </div>

 </body>


    <!-- javascript -->
         <script>
                $(".carousel-item:first-child").addClass("active");

         </script>
         <script src="~/lib/jquery/dist/jquery.min.js"></script>
         <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
         <script src="~/js/custom.js" asp-append-version="true"></script>
</html>
